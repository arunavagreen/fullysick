<%= simple_form_for(@enquiry) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :name %>
    <%= f.input :message %>
    <%= f.input :phone %>
    <%= f.input :enquiry_type, collection: ['Appointment query', 'Cancellation', 'Website error', 'Other'] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
